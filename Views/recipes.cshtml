<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <title></title>
  </head>
  <body>
    <div class="container">
      <form action="/recipes/sort" method="post">
        <button type="submit" name="button">Sort By Rating</button>
      </form>
      <ul>
        @foreach(var recipe in Model)
        {
          <li><a href="/recipes/@recipe.GetId()">@recipe.GetName() - @recipe.GetRating()</a></li>
        }
      </ul>
      <a href="/recipes/add">Add a Recipe</a> |
      <a href="/categories/add">Add a Category</a> |
      <a href="/recipes">View all Recipes</a> |
      <a href="/categories">View all Categories</a>
    </div>
  </body>
</html>
