<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <title>Add Ingredient</title>
  </head>
  <body>
    <div class="container">
      <form class="form-group" action="/ingredients/add" method="POST">
        <label for="ingredient-name">Ingredient</label>
        <input type="text" name="ingredient-name" required>
        <button type="submit" name="button">Submit</button>
      </form>
      <ul>
        @foreach (var ingredient in Model)
        {
            <li><a href="/ingredients/@ingredient.GetId()">@ingredient.GetName()</a></li>
        }
      </ul>
      <a href="/recipes">View all Recipes</a> |
      <a href="/categories">View all Categories</a> |
      <a href="/ingredients">View all Ingredients</a>
    </div>
  </body>
</html>
