<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <title></title>
  </head>
  <body>
    <div class="container">
      <h1>@Model.GetName()</h1>
      <br>
      Recipes:

      <ul>@foreach(var recipe in Model.GetRecipes())
        {
          <li><a href="/recipes/@recipe.GetId()">@recipe.GetName()</a></li>
        }
      </ul>
      <form action="/ingredients/@Model.GetId()/delete" method="post">
        <input type="hidden" name="_method" value="DELETE">
        <button type="submit" name="button">Delete This Ingredient</button>
      </form>
      <a href="/recipes/add">Add a Recipe</a> |
      <a href="/categories/add">Add a Category</a> |
      <a href="/recipes">View all Recipes</a> |
      <a href="/categories">View all Categories</a> |
      <a href="/ingredients/add">Add an Ingredient</a> |
      <a href="/ingredients">View all Ingredients</a>
    </div>
  </body>
</html>
